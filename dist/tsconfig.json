{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "./dist",
        "strict": true,
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "allowUmdGlobalAccess": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "lib": [
            "ES6",
            "ES2020.Promise",
            "dom"
        ],
        "rootDirs": [
            "./src",
            "./__test__"
        ]
    },
    "include": [
        "./src/**/*",
        "./src/tests",
        "src/tests/test.produtos.controller.ts",
        "tsconfig.json"
    ],
    "exclude": [
        "./node_modules/*",
        "./dist",
        "src/tests"
    ]
}
